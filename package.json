{
  "name": "react-flow-extension",
  "displayName": "React flow extension",
  "version": "1.1.0",
  "description": "An extension for GitHub, GitLab and Bitbucket to see the diff-graph over the files changed and easily navigate the pull request changes.",
  "author": "Avikalp Gupta <avikalp@vibinex.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@xyflow/react": "^12.4.3",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://github.com/*",
      "https://bitbucket.org/*",
      "https://gitlab.com/*",
      "https://vibinex.com/*"
    ],
    "permissions": [
      "sidePanel",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.ts"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "https://github.com/*",
          "https://vibinex.com/*",
          "https://gitlab.com/*",
          "https://bitbucket.org/*"
        ]
      }
    ]
  }
}